<!-- source/flats/show.html.erb -->

<!-- Access data.flats with owner's name as key -->
<% flat = data.flats[owner] %>

<!-- Inject flat data in template -->
  <div class="banner flat-show" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url(<%= flat.picture%>);">
    <div class="banner-content">
      <h1><%= flat.name %></h1>
      <h1><%= flat.description %></h1>
      <p><%= flat.city_name %></p>
      <p>Learn to code with us in Berlin</p>
    </div>
  </div>
