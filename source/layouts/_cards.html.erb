
<div class="container">
  <% data.flats.each do |owner, flat| %>
  <div class="col-sm-6 col-md-3">
    <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= flat.picture %>);">
      <div class="card-category"><%= flat.city_name %></div>
      <div class="card-description">
        <h2><%= flat.city_name %></h2>
        <p><%= flat.description %></p>
      </div>
      <%= image_tag "#{flat.picture}", class:"card-user" %>
      <%= link_to "", "flats/#{owner}.html", class: "card-link" %>
      <a class="card-link" href="#" ></a>
    </div>
  </div>
  <%end%>
</div>
